         <image>
            <Image url="@../../../images/login.jpg" />
         </image>
      </ImageView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="699.0" layoutY="77.0" prefHeight="43.0" prefWidth="218.0" text="Sign In" textAlignment="CENTER" textFill="#24007e">
         <font>
            <Font size="62.0" />
         </font>
      </Label>
      <TextField fx:id="login_id" alignment="CENTER" layoutX="723.0" layoutY="226.0" prefHeight="39.0" prefWidth="198.0" promptText="ID" style="-fx-border-radius: 50;" />
