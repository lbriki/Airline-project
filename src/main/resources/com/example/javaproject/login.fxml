            <Image url="@../../../images/user.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="login_password" alignment="CENTER" layoutX="723.0" layoutY="286.0" prefHeight="39.0" prefWidth="198.0" promptText="Password" />
      <ImageView fitHeight="17.0" fitWidth="18.0" layoutX="933.0" layoutY="297.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/padlock.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
